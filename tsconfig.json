{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./custom.d.ts",
      "./node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules",
    "dist",
    "templates"
  ]
}